<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg_color"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rel_tou"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@drawable/t_bg" >

        <ImageView
            android:id="@+id/register_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="3dip"
            android:onClick="doclick"
            android:src="@drawable/back_bg" />

        <TextView
            android:id="@+id/textview_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:text="注册"
            android:textSize="@dimen/title_siae" />
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@drawable/logo_xian" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dip"
        android:background="@drawable/register_bg_1"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <EditText
                android:id="@+id/register_phone"
                android:layout_width="fill_parent"
                android:layout_height="45dip"
                android:layout_centerVertical="true"
                android:background="@null"
                android:hint="请输入您的手机号"
                android:inputType="number"
                android:paddingLeft="10dip"
                android:textColor="@color/textcolor"
                android:textColorHint="@color/text_edt_color"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@drawable/back2"
                android:visibility="invisible" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:visibility="gone" >

            <EditText
                android:id="@+id/register_code"
                android:layout_width="fill_parent"
                android:layout_height="45dip"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/register_btn_getcode"
                android:background="@null"
                android:hint="输入短信验证码"
                android:paddingLeft="10dip"
                android:textColor="@color/textcolor"
                android:textColorHint="@color/text_edt_color"
                android:textSize="16sp" />

            <Button
                android:id="@+id/register_btn_getcode"
                android:layout_width="120dip"
                android:layout_height="40dip"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="3dip"
                android:background="@drawable/register_get_code"
                android:onClick="doclick"
                android:src="@drawable/back2"
                android:text="获取短信验证"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@drawable/back2"
                android:visibility="invisible" />
        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/logo_xian" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <EditText
                android:id="@+id/register_psd_1"
                android:layout_width="fill_parent"
                android:layout_height="45dip"
                android:layout_centerVertical="true"
                android:background="@null"
                android:hint="请输入6位以上密码"
                android:paddingLeft="10dip"
                android:password="true"
                android:textColor="@color/textcolor"
                android:textColorHint="@color/text_edt_color"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@drawable/back2"
                android:visibility="invisible" />
        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/logo_xian" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <EditText
                android:id="@+id/m_code"
                android:layout_width="220dip"
                android:layout_height="45dip"
                android:layout_centerVertical="true"
                android:background="@null"
                android:hint="输入验证码"
                android:paddingLeft="10dip"
                android:textColor="@color/textcolor"
                android:textColorHint="@color/text_edt_color"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/img_code"
                android:layout_width="64dip"
                android:layout_height="28dip"
                android:layout_centerVertical="true"
                android:layout_marginLeft="120dip"
                android:layout_marginRight="10dip"
                android:layout_toLeftOf="@+id/fresh_code" />

            <ImageView
                android:id="@+id/fresh_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dip"
                android:onClick="doclick"
                android:src="@drawable/default_ptr_rotate" />
        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/logo_xian" />

