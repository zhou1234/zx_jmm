<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/iv_meimiao"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/loading_01" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="#ffffff"
        android:gravity="top"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:scaleY="0.8"
                android:scaleX="0.8"
                android:src="@drawable/img_meimiaoshuo" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|top"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_meimiaoshuo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="3dp"
                android:maxLines="2" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_downAndUp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:gravity="center|top"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/iv_downAndUp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleX="0.7"
                android:scaleY="0.5"
                android:layout_gravity="top"
                android:layout_marginTop="10dp"
                android:src="@drawable/img_down" />
        </LinearLayout>
    </LinearLayout>

    <com.jifeng.myview.My_GridView
        android:id="@+id/item_gridview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:horizontalSpacing="5dip"
        android:numColumns="2"
        android:paddingTop="0dp"
        android:verticalSpacing="5dip" >
    </com.jifeng.myview.My_GridView>

</LinearLayout>