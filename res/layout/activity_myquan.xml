<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ededed"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/rel_top"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/t_bg" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="现金券"
                android:textSize="@dimen/title_siae" />

            <ImageView
                android:id="@+id/quan_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="3dip"
                android:background="@drawable/back_bg"
                android:onClick="doclick" />

            <TextView
                android:id="@+id/tv_addQuan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:text="添加"
                android:textSize="@dimen/title_siae" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/logo_xian" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="35dp"
            android:gravity="center"
            android:background="@color/white"
            android:orientation="horizontal" >

            <!-- android:background="@drawable/fadian_bg" -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/rel_quan_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:background="@null"
                    android:onClick="doclick"
                    android:text="未使用"
                    android:textColor="@color/tab_select" />

                <ImageView
                    android:id="@+id/iv_quan_no"
                    android:layout_width="60dp"
                    android:layout_height="2dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/main_ok_select_ok" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/rel_quan_yes"
                     android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:background="@null"
                    android:onClick="doclick"
                    android:text="已使用"
                    android:textColor="@color/textcolor" />

                <ImageView
                    android:id="@+id/iv_quan_yes"
                    android:layout_width="60dp"
                    android:layout_height="2dp"
                    android:scaleType="fitXY"
                     android:visibility="invisible"
                    android:src="@drawable/main_ok_select_ok" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/rel_quan_last"
                     android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:background="@null"
                    android:onClick="doclick"
                    android:text="已过期"
                    android:textColor="@color/textcolor" />

                <ImageView
                    android:id="@+id/iv_quan_last"
                    android:layout_width="60dp"
                    android:layout_height="2dp"
                    android:scaleType="fitXY"
                    android:visibility="invisible"
                    android:src="@drawable/main_ok_select_ok" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/img_xian"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/logo_xian" />

    <ListView
        android:id="@+id/listView_quan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@null"
        android:fadingEdge="none" />

    <LinearLayout
        android:id="@+id/loading"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dip"
        android:gravity="center"
        android:visibility="gone" >

        <ProgressBar
            android:id="@+id/ProgressBar01"
            style="?android:attr/progressBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10.0dip"
            android:text="loading . . ." />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/iv_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/img_coupon"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>